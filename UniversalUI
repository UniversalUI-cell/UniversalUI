local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "UniversalUI",
   LoadingTitle = "Loading UniversalUI",
   LoadingSubtitle = "by Mirtis1,.zzynic",
   ConfigurationSaving = {
      Enabled = false,
      FolderName = nil, -- Create a custom folder for your hub/game
      FileName = "UniversalUI"
   },
   Discord = {
      Enabled = false,
      Invite = "noinvitelink", -- The Discord invite code, do not include discord.gg/. E.g. discord.gg/ABCD would be ABCD
      RememberJoins = true -- Set this to false to make them join the discord every time they load it up
   },
   KeySystem = true, -- Set this to true to use our key system
   KeySettings = {
      Title = "UniversalUI",
      Subtitle = "Key System",
      Note = "dm mirtis1 or .zzynic on discord to get the key",
      FileName = "UniversalUIKey", -- It is recommended to use something unique as other scripts using Rayfield may overwrite your key file
      SaveKey = true, -- The user's key will be saved, but if you change the key, they will be unable to use your script
      GrabKeyFromSite = false, -- If this is true, set Key below to the RAW site you would like Rayfield to get the key from
      Key = {"Universe"} -- List of keys that will be accepted by the system, can be RAW file links (pastebin, github etc) or simple strings ("hello","key22")
   }
})

local Universal = Window:CreateTab("Universal")
local UniversalSection = Universal:CreateSection("Universal")

local Button = Universal:CreateButton({
   Name = "Infinity yield",
   Callback = function()
   loadstring(game:HttpGet("https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source"))()
   end,
})

local Button = Universal:CreateButton({
   Name = "Sirius Universal",
   Callback = function()
   loadstring(game:HttpGet('https://sirius.menu/script'))()
   end,
})

local Games = Window:CreateTab("Games")
local GamesSection = Games:CreateSection("Games")

local Button = Games:CreateButton({
   Name = "Arsenal(Turns off universalUi when launched",
   Callback = function()
   lrm_load_script("41f7d88bf584cfbb05c0f507eda3a130")
   end,
})

local Button = Games:CreateButton({
   Name = "Fnaf Doom ESP",
   Callback = function()
   loadstring(game:HttpGet("https://raw.githubusercontent.com/liigmabalz/Projetos_Lua/main/FNaF_Doom2.lua"))();
   end,
})

local Button = Games:CreateButton({
   Name = "Blade ball",
   Callback = function()
   loadstring(game:HttpGet("https://raw.githubusercontent.com/FFJ1/Roblox-Exploits/main/scripts/BladeBallV3.lua"))()
   end,
})
